<div class="row">
    <div class="col-xs-4">
        <%= form_for(@song) do |f| %>
        <% if @song.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@song.errors.count, "error") %>
                prohibited this song from being saved:</h2>

            <ul>
                <% @song.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <div class="field">
            <%= f.label :name %><br>
            <%= f.text_area :name %>
        </div>
        <div class="field">
            <%= f.label :date %><br>
            <%= f.datetime_select :date %>
        </div>
        <div class="field">
            <%= f.label :project_id %><br>
            <%= f.number_field :project_id %>
        </div>
        <div class="field">
            <%= f.label :song_notes %><br>
            <%= f.text_area :song_notes %>
        </div>
        <div class="actions">
            <%= f.submit %>
        </div>
    </div>
</div>
<% end %>
